{% extends 'base.njk' %}

{%- block content -%}

<div class="pagehead">
	<div class="pagetitle">{{ title }}</div>
	{%- if subtitle -%}
		<div class="pagesubtitle">{{ subtitle }}</div>
	{%- endif -%}
	<div class="pagedate">Posted: {{ postdate }}</div>
</div>
<article class="postbody">
	{{ content | safe }}
</article>

{%- endblock -%}