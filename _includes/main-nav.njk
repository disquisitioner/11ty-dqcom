<div class="slide_toggle">
    <label class="switch">
      <input id="themeswitch" type="checkbox" onclick="toggleTheme()">
      <span class="slider round"></span>
    </label>
</div>
<nav class="navheader">
  <div class="sitetitle"><a class="hoverlink" href="{{ site.url | url }}">{{ site.name or "Welcome!" }}</a></div>
  <div class="navmenu">
    <ul>
      <li>
        <div class="dropdown">
          <div class="dropdown__btn">Articles</div>
          <div class="dropdown__content">
            <span class="dropdown__subhead">Latest:</span>
            {%- for article in collections.article | reverse %}
              {%- if loop.index < 4 -%}
                <a class="dropdown__item hoverlink" href="{{ article.url | url }}">{{ article.data.title }}</a>
              {%- endif -%}
            {%- endfor -%}
            <hr class="dropdown__sep" width=30%></hr>
            <a class="dropdown__exit hoverlink" href="/articles">See All Articles...</a>
          </div>
        </div> 
      </li>

      <li>
        <div class="dropdown">
          <div class="dropdown__btn">Apps</div>
          <div class="dropdown__content">
            {%- for app in collections.appsAscending -%} 
              <a class="dropdown__item hoverlink" href="{{ app.url }}">{{ app.data.title }}</a> 
            {%- endfor -%}
          </div>
        </div> 
      </li>

      <li>
        <div class="navmenu__link"><a class="hoverlink" href="/photos">Photos</a></div>
      </li>

      <li>
        <div class="navmenu__link"><a class="hoverlink" href="/about">About</a></div>
      </li>

  </ul>
</nav>
