<nav class="navheader">
  <div class="sitetitle"><a href="{{ site.url | url }}">{{ site.name or "Welcome!" }}</a></div>
  <div class="navmenu">
    <ul>
      <li>
        <div class="dropdown">
          <div class="dropdown__btn">Articles</div>
          <div class="dropdown__content">
            <span class="dropdown__subhead">Latest:</span>
            {%- for article in collections.article | reverse %}
              {%- if loop.index < 4 -%}
                <a class="dropdown__item" href="{{ article.url | url }}">{{ article.data.title }}</a>
              {%- endif -%}
            {%- endfor -%}
            <hr class="dropdown__sep" width=30%></hr>
            <a class="dropdown__exit" href="/articles">See All Articles...</a>
          </div>
        </div> 
      </li>

      <li>
        <div class="dropdown">
          <div class="dropdown__btn">Apps</div>
          <div class="dropdown__content">
            {%- for app in collections.appsAscending -%} 
              <a class="dropdown__item" href="{{ app.url }}">{{ app.data.appTitle }}</a> 
            {%- endfor -%}
          </div>
        </div> 
      </li>

      <li>
        <a href="/photos">Photos</a>
      </li>

      <li>
        <a href="/about">About</a>
      </li>

  </ul>
</nav>
