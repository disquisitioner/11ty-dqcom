{% extends 'base.njk' %}

{% block content %}

<div class="pagehead">
	<div class="pagetitle">{{ title }}</div>
	{% if subtitle %}
	    <div class="pagesubtitle">{{ subtitle }}</div>
	{% endif %}
</div>

{{ content | safe }}

<ul>
{% for post in collections.post | reverse -%}
  <li>
  	<a href="{{ post.url }}">{{ post.data.title }}</a>
    {%- if post.data.description -%}
  	  &nbsp; -- {{ post.data.description }}&nbsp;({{ post.data.date | dateDisplay("LLL d, y") }})
  	  {%- else -%}
  	  &nbsp; -- {{ post.data.date | dateDisplay("LLL d, y") }}
  	{%- endif -%}
  </li>
{%- endfor %}
</ul>

{% endblock %}