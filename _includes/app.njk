<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ appTitle }}</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.19.0/themes/prism.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.19.0/themes/prism-okaidia.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.19.0/prism.min.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Titillium+Web:300,400,600&display=swap" rel="stylesheet"> 

    <link rel="icon" href="/img/David-Bryant-icon128.jpg"/>
    {% if appDescription %} <meta name="description" content="{{ appDescription }}"> {% endif %}
    {% if appAuthor %} <meta name="author" content="{{ appAuthor }}">{% endif %}
    <link rel="stylesheet" href="{{ '/css/site.css' | url }}">
    {%- if appCssList -%}
      {%- for cssfile in appCssList -%} 
        <link rel="stylesheet" href="{{ cssfile | url }}">
      {%- endfor -%}
    {%- endif -%}
    {%- if appJsList -%}
      {%- for jsfile in appJsList -%} 
      <script src="{{ jsfile | url }}"></script>
      {%- endfor -%}
    {%- endif -%}
  </head>
  <body>
    <header>
      <h1 class="apptitle">{{ appTitle }}</a></h1>
    </header>

    <main>
      {{ content | safe }}
    </main>

    <footer>
      {%- include "footer-nav.njk" -%}
    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
